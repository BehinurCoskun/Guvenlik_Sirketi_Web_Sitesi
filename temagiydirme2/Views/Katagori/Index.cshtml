

@model IEnumerable<temagiydirme2.Models.GKatagori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/styles.css" rel="stylesheet" />
<script src="~/js/datatables-simple-demo.js"></script>
<script src="~/js/scripts.js"></script>
<h2>Katagori Sayfası</h2>

<p>
    @Html.ActionLink("Katagori Ekle", "Create")
</p>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        veriler
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Katagori Adi</th>


                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Katagori Adi</th>

                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.KatagoriAdi)
                        </td>
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.KatagoriId }) |

                            @Html.ActionLink("Sil", "Delete", new { id = item.KatagoriId })
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>











