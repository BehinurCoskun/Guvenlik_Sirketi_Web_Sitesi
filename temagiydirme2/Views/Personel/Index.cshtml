

@model IEnumerable<temagiydirme2.Models.GPersonel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Personel</h2>
<link href="~/css/styles.css" rel="stylesheet" />
<script src="~/js/datatables-simple-demo.js"></script>
<script src="~/js/scripts.js"></script>
<p>
    @Html.ActionLink("Personel Ekle", "Create")
</p>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Veriler
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Adres</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Adres</th>

                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PerAdSoyad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PerMail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PerTel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PerAdres)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.KatagoriId)
                            </td>*@
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.PersonelId }) |

                            @Html.ActionLink("Sil", "Delete", new { id = item.PersonelId })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>














